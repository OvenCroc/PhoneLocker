<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/public_padding">

    <ImageView
        android:id="@+id/app_icon_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/app_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/public_margin"
        android:layout_marginLeft="@dimen/public_margin"
        android:layout_marginEnd="@dimen/public_margin"
        app:layout_constraintBottom_toBottomOf="@id/app_icon_img"
        app:layout_constraintEnd_toStartOf="@id/status_cbox"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/app_icon_img"
        app:layout_constraintTop_toTopOf="@id/app_icon_img"
        tools:text="我是app的名称" />

    <CheckBox
        android:id="@+id/status_cbox"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@id/app_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/app_name_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>